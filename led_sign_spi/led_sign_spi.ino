  pinMode(latch, OUTPUT);
  pinMode(sck, OUTPUT);
  pinMode(green, OUTPUT);
  pinMode(red, OUTPUT);
  digitalWrite(latch, 0);
  SPI.begin();
  SPI.setBitOrder(MSBFIRST);
